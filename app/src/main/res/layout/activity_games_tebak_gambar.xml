<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_tebakgambar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".leftmenu.games.ActivityGamesTebakGambar">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_huruf"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintEnd_toEndOf="@+id/imageView11"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.19999999"
        app:srcCompat="@drawable/asset6" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_erupsi" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.00999999"
        app:srcCompat="@drawable/btn_back" />

    <LinearLayout
        android:id="@+id/ll_jawabdisini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_huruf"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/ll_huruf"
        app:layout_constraintEnd_toEndOf="@+id/imageView11"
        app:layout_constraintStart_toStartOf="@+id/imageView11">

        <TextView
            android:id="@+id/tv_jawab"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_rectangle_bluegreen"
            android:fontFamily="@font/okojoprobold"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_disini"
            android:layout_width="133dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/rounded_rectangle_normalblue"
            android:fontFamily="@font/okojoprobold"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_corret"
        android:layout_width="71dp"
        android:layout_height="74dp"
        android:layout_above="@+id/ll_huruf"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/ll_jawabdisini"
        app:layout_constraintBottom_toBottomOf="@+id/ll_jawabdisini"
        app:layout_constraintStart_toEndOf="@+id/ll_jawabdisini"
        app:layout_constraintTop_toTopOf="@+id/ll_jawabdisini"
        app:layout_constraintVertical_bias="0.82"
        app:srcCompat="@drawable/ic_check_green" />

    <Button
        android:id="@+id/btn_cek"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/ll_huruf"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/ll_jawabdisini"
        android:background="@drawable/rounded_rectangle_normalblue"
        android:fontFamily="@font/okojoprobold"
        android:text="CEK"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ll_jawabdisini"
        app:layout_constraintEnd_toStartOf="@+id/ll_jawabdisini"
        app:layout_constraintStart_toStartOf="@+id/ll_huruf"
        app:layout_constraintTop_toTopOf="@+id/ll_jawabdisini" />

    <LinearLayout
        android:id="@+id/ll_huruf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_rectangle_normalblue"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView11"
        app:layout_constraintEnd_toEndOf="@+id/imageView11"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.932">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/A"
                style="@style/HurufTebakKata"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="A" />

            <Button
                android:id="@+id/B"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="B" />

            <Button
                android:id="@+id/C"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="C" />

            <Button
                android:id="@+id/D"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="D" />

            <Button
                android:id="@+id/E"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="E" />

            <Button
                android:id="@+id/F"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="F" />

            <Button
                android:id="@+id/G"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="G" />

            <Button
                android:id="@+id/H"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="H" />

            <Button
                android:id="@+id/I"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="I" />

            <Button
                android:id="@+id/J"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="J" />

            <Button
                android:id="@+id/K"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="K" />

            <Button
                android:id="@+id/L"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="L" />

            <Button
                android:id="@+id/M"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="M" />

            <Button
                android:id="@+id/N"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="N" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/O"
                style="@style/HurufTebakKata"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="O" />

            <Button
                android:id="@+id/P"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="P" />

            <Button
                android:id="@+id/Q"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="Q" />

            <Button
                android:id="@+id/R"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="R" />

            <Button
                android:id="@+id/S"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="S" />

            <Button
                android:id="@+id/T"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="T" />

            <Button
                android:id="@+id/U"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="U" />

            <Button
                android:id="@+id/V"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="V" />

            <Button
                android:id="@+id/W"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="W" />

            <Button
                android:id="@+id/X"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="X" />

            <Button
                android:id="@+id/Y"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="Y" />

            <Button
                android:id="@+id/Z"
                style="@style/HurufTebakKata"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="Z" />

            <Button
                android:id="@+id/btn_delete"
                style="@style/HurufTebakKata"
                android:layout_width="82dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_rectangle_lightblue"
                android:text="DELETE"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>