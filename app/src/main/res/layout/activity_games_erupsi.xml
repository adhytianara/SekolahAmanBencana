<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".leftmenu.games.ActivityGamesErupsi">

    <ImageView
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/game1erupsi"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/okojoprobold"
        android:text="GAME 1. ERUPSI?"
        android:textColor="#4a684e"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/background"
        app:layout_constraintEnd_toEndOf="@id/background"
        app:layout_constraintStart_toStartOf="@id/background"
        app:layout_constraintTop_toTopOf="@id/background"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_laki"
        android:layout_width="141dp"
        android:layout_height="63dp"
        android:fontFamily="@font/okojoproregular"
        android:gravity="center"
        android:padding="5dp"
        android:text="Hm.. zona Ring of Fire itu apa?"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/background"
        app:layout_constraintEnd_toEndOf="@id/background"
        app:layout_constraintHorizontal_bias="0.793"
        app:layout_constraintStart_toStartOf="@id/background"
        app:layout_constraintTop_toTopOf="@id/background"
        app:layout_constraintVertical_bias="0.463" />

    <TextView
        android:id="@+id/tv_perempuan"
        android:layout_width="139dp"
        android:layout_height="66dp"
        android:fontFamily="@font/okojoproregular"
        android:gravity="center"
        android:padding="5dp"
        android:text="Tahukah kamu, negara kita Indonesia termasuk ke dalam zona Ring of Fire loh. "
        android:textColor="@android:color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/background"
        app:layout_constraintEnd_toEndOf="@id/background"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="@id/background"
        app:layout_constraintTop_toTopOf="@id/background"
        app:layout_constraintVertical_bias="0.57" />

    <TextView
        android:id="@+id/tv_jawabanbenar"
        android:layout_width="144dp"
        android:layout_height="51dp"
        android:background="@drawable/rounded_rectangle_lightgreen"
        android:fontFamily="@font/okojoproregular"
        android:gravity="center"
        android:padding="5dp"
        android:text="Daerah yang sering mengalami gempa bumi dan letusan gurung berapi"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/background"
        app:layout_constraintEnd_toEndOf="@id/background"
        app:layout_constraintHorizontal_bias="0.303"
        app:layout_constraintStart_toStartOf="@id/background"
        app:layout_constraintTop_toTopOf="@id/background"
        app:layout_constraintVertical_bias="0.894" />

    <TextView
        android:id="@+id/tv_jawabansalah"
        android:layout_width="144dp"
        android:layout_height="51dp"
        android:background="@drawable/rounded_rectangle_lightgreen"
        android:fontFamily="@font/okojoproregular"
        android:gravity="center"
        android:padding="5dp"
        android:text="Daerah yang sering mengalami banjir dan tanah longsor"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/background"
        app:layout_constraintEnd_toEndOf="@id/background"
        app:layout_constraintHorizontal_bias="0.694"
        app:layout_constraintStart_toStartOf="@id/background"
        app:layout_constraintTop_toTopOf="@id/background"
        app:layout_constraintVertical_bias="0.894" />

    <TextView
        android:id="@+id/tv_deskripsi"
        android:layout_width="374dp"
        android:layout_height="64dp"
        android:background="@drawable/rounded_rectangle_lightgreen"
        android:fontFamily="@font/okojoproregular"
        android:gravity="center"
        android:hint="Tekan disini"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/background"
        app:layout_constraintEnd_toEndOf="@id/background"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@id/background"
        app:layout_constraintTop_toTopOf="@id/background"
        app:layout_constraintVertical_bias="0.937" />

    <Button
        android:id="@+id/btn_ulang"
        android:layout_width="47dp"
        android:layout_height="25dp"
        android:background="@drawable/rounded_rectangle_darkgreen"
        android:fontFamily="@font/okojoprobold"
        android:text="Ulangi"
        android:textColor="@android:color/white"
        android:textSize="8sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/background"
        app:layout_constraintEnd_toEndOf="@id/background"
        app:layout_constraintStart_toStartOf="@id/background"
        app:layout_constraintTop_toTopOf="@id/background"
        app:layout_constraintVertical_bias="0.661" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998"
        app:srcCompat="@drawable/btn_back" />

</android.support.constraint.ConstraintLayout>